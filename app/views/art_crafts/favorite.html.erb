<%#<%= link_to 'お気に入り', art_craft_favorite_path(@art_craft, @favorite_art_craft), method: 'show', class: "nav-item nav-link" %>

<div class="container">
  <div class="row p-3">
    <div class="col-12 p-3 favorite-message">
      Your favorite<br/>
      &ensp;&ensp;Manga/Anime</br>
    </div>
  </div>
  
  <% if user_signed_in? %>
    <div class="row p-3">
      <div class="col-6 p-3 manga_favorites">
        <h3>お気に入りマンガ</h3>
        <ul class="list-group list-group-flush">
          <% @comics.each  do |comic| %>
            <li class="list-group-item"><%= link_to comic.title, art_craft_path(comic.id) %></li>
          <% end %>
        </ul>
      </div>

      <div class="col-6 p-3 anime_favorites">
        <h3>お気に入りアニメ</h3>
        <ul class="list-group list-group-flush">
          <% @animes.each  do |anime| %>
            <li class="list-group-item"><%= link_to anime.title, art_craft_path(anime.id) %></li>
          <% end %>
        </ul>
      </div>
    </div>
    
  <% else %>
    <div class="mx-auto" style="width: 200px;">
      <%= link_to "ログインしてお気に入り一覧を表示", new_user_session_path, class: 'btn btn-outline-secondary' %>
    </div>
    
  <% end %>