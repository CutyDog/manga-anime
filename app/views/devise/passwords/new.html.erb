<div class="container">
    <div class="row p-3">
      <div class="col-12 p-3">パスワードを忘れた場合</div>
    </div>
  
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
     
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %><br></br>
      </div>
     
      <div class="actions">
        <%= f.submit "パスワードのリセット方法を送る" %><br></br>
      </div>
    <% end %>
   
    <%= render "devise/shared/links" %>
</div>